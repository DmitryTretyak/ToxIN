mixin dropdown
    .form-item
        label(for="dropdown" class='form-description')
            h3 Dropdown
        .form
            input(type="checkbox" id="dropdown")
            label(class="form__face" for="dropdown")
                p.form__text Сколько гостей
                .form__arrow
            .form__items
                li 1
                li 2
                li 3
                li 4
                li 5
