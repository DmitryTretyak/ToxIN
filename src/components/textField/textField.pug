mixin image(name, caption)
  figure
    img(src=name + ".jpg")
    figcaption= caption

mixin text-field(focus, val)
    .form-item
        if focus == 'hover / focus'
            - focus = focus.toUpperCase()
            label(for="email-input" class='flex form-description')
                h3 Text Field
                p.type-element #{focus}
            input(
            name='email-input'
            type="email"
            placeholder="Email"
            autocomplete="email"
            value= val
            class="text-field text-field__focus"
            )
        else if focus == 'default'
            - focus = focus.toUpperCase()
            label(for="email-input" class='flex form-description')
                h3 Text Field
                p.type-element #{focus}
            input(
            type="email"
            placeholder="Email"
            autocomplete="email"
            value= val
            class="text-field"
            )

